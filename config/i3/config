# ============================================================================
# i3 Configuration - Debian 13 + Zenbook S 13 OLED
# Tokyo Night Theme
# ============================================================================

# ============================================================================
# CORE SETTINGS
# ============================================================================

set $mod Mod4

# Font
font pango:Cascadia Code 13

# Window behavior
floating_modifier $mod
focus_follows_mouse no
mouse_warping none
popup_during_fullscreen smart

# Gaps and borders
gaps inner 5
gaps outer 5
smart_borders on
smart_gaps on
default_border pixel 1
default_floating_border pixel 1

# ============================================================================
# VARIABLES
# ============================================================================

set $term alacritty
set $editor nvim
set $filemgr lf
set $monitor btop
set $launcher rofi -show drun -show-icons

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# ============================================================================
# TOKYO NIGHT COLORS
# ============================================================================

set $bg         #1a1b26
set $bg_dark    #16161e
set $bg_hl      #292e42
set $fg         #c0caf5
set $fg_dark    #a9b1d6
set $accent     #7aa2f7
set $red        #f7768e
set $green      #9ece6a
set $yellow     #e0af68
set $blue       #7aa2f7
set $magenta    #bb9af7
set $cyan       #7dcfff

# Window colors
#                       border      background  text        indicator   child_border
client.focused          $accent     $bg_hl      $fg         $accent     $accent
client.focused_inactive $bg_hl      $bg         $fg_dark    $bg_hl      $bg_hl
client.unfocused        $bg_dark    $bg_dark    $fg_dark    $bg_dark    $bg_dark
client.urgent           $red        $red        $fg         $red        $red
client.placeholder      $bg_dark    $bg_dark    $fg_dark    $bg_dark    $bg_dark
client.background       $bg

# ============================================================================
# KEYBINDINGS - CORE
# ============================================================================

# Terminal
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $term --title="floating-term"

# Close window
bindsym $mod+Shift+q kill

# Reload/Restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit i3 (with confirmation)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit' -B 'Power Menu' '$HOME/.config/i3/scripts/powermenu.sh'"

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id "$HOME/.config/i3/scripts/blur-lock.sh"

# ============================================================================
# KEYBINDINGS - NAVIGATION
# ============================================================================

# Focus (vim-style: h=left, j=down, k=up, l=right)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Focus (arrow keys)
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move (vim-style)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Move (arrow keys)
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split
