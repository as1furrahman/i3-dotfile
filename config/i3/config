# ============================================================================
# RESIZE MODE
# ============================================================================

mode "resize" {
    # Vim-style (h=shrink width, j=grow height, k=shrink height, l=grow width)
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # Arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # Exit resize mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


# Touchpad configuration (configured via scripts/touchpad.sh)
exec_always --no-startup-id "$HOME/.config/i3/scripts/touchpad.sh"



# ============================================================================
# STATUS BAR
# ============================================================================


bar {
    status_command i3blocks
    position top
    font pango:Cascadia Code 11
    
    colors {
        background $bg
        statusline $fg
        separator  $bg_hl

        #                  border      background  text
        focused_workspace  $accent     $accent     $bg
        active_workspace   $bg_hl      $bg_hl      $fg
        inactive_workspace $bg         $bg         $fg_dark
        urgent_workspace   $red        $red        $fg
        binding_mode       $magenta    $magenta    $fg
    }
}

# ============================================================================
# AUTOSTART
# ============================================================================

# Compositor (for blur, transparency, rounded corners)
exec --no-startup-id picom -b

# Reset cursor to normal arrow (fixes loading cursor issue)
exec --no-startup-id xsetroot -cursor_name left_ptr

# Notifications
exec --no-startup-id dunst

# Clipboard manager (wl-clipboard for Wayland, xclip for X11)
# exec --no-startup-id wl-paste -t text --watch clipman store 2>/dev/null || clipman store &

# Startup applications
exec --no-startup-id bash -c '$HOME/.config/i3/scripts/rofi-bluetooth.sh autoconnect &'
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy --nofork
exec --no-startup-id nm-applet
exec --no-startup-id lxpolkit
exec --no-startup-id xset s 300 300

# Automatic Timezone Setup
exec --no-startup-id $HOME/.config/i3/scripts/time-setup.sh

# Wallpaper
exec_always --no-startup-id "$HOME/.config/i3/scripts/wallpaper_manager.sh"

# Open terminal on workspace 1 at startup (with delay to ensure i3 is ready)
exec --no-startup-id sleep 0.5 && alacritty
