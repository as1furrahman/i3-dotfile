# exec_always --no-startup-id feh --bg-fill "$HOME/.config/wallpapers/tokyo-night.png"

# Monitor layout
# exec --no-startup-id "$HOME/.screenlayout/monitor.sh"

# Compositor
# exec --no-startup-id picom --config ~/.config/picom/picom.conf

# Audio (PipeWire)
exec --no-startup-id pipewire &
exec --no-startup-id pipewire-pulse &
exec --no-startup-id wireplumber &

# Notifications
exec --no-startup-id dunst

# Clipboard manager
exec --no-startup-id clipman store

# Network applet
exec --no-startup-id nm-applet

# Auto lock
# Auto lock (xss-lock listens to systemd suspend system-sleep and X idle)
exec --no-startup-id xss-lock --transfer-sleep-lock -- "$HOME/.config/i3/scripts/blur-lock.sh"
# Set idle timer to 5 minutes
exec --no-startup-id xset s 300 300

# Wallpaper
exec_always --no-startup-id "$HOME/.config/i3/scripts/wallpaper_manager.sh"

# Autostart applications
# exec --no-startup-id dex --autostart --environment i3

# Open terminal on workspace 1
exec --no-startup-id i3-msg 'workspace $ws1; exec $term'
