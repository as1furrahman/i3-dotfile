bindsym XF86KbdBrightnessUp exec --no-startup-id $HOME/.config/i3/scripts/kbd_backlight_control.sh up
bindsym XF86KbdBrightnessDown exec --no-startup-id $HOME/.config/i3/scripts/kbd_backlight_control.sh down

