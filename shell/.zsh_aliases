# General
alias v='nvim'
alias m='micro'
alias f='lf'
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF'
alias c='clear'
alias q='exit'

# Git
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'

# System
alias top='btop'
alias cat='bat --theme=TwoDark 2>/dev/null || cat'
alias projects='cd ~/projects'
alias update='sudo apt update && sudo apt upgrade'
alias cleanup='sudo apt autoremove && sudo apt autoclean'

# Config editing
alias i3config='$EDITOR ~/.config/i3/config'
alias zshconfig='$EDITOR ~/.zshrc'
