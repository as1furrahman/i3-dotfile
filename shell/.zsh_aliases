# ============================================
# Additional Zsh Aliases
# Source this file from .zshrc if desired
# ============================================

# Project-specific shortcuts (customize as needed)
alias thesis='cd ~/projects/thesis && nvim .'
alias notes='cd ~/Documents/notes && nvim .'

# Container workflows
alias thesis-box='distrobox enter thesis'

# Development
alias py='python3'
alias pip='pip3'
alias venv='python3 -m venv'
alias activate='source ./venv/bin/activate'

# Docker/Podman (prefer podman)
alias docker='podman'
alias dc='podman-compose'

# Quick server
alias serve='python3 -m http.server 8000'

# Rsync shortcuts
alias rsync-copy='rsync -avz --progress'
alias rsync-move='rsync -avz --progress --remove-source-files'
alias rsync-sync='rsync -avzu --delete --progress'

# SSH shortcuts (add your hosts)
# alias myserver='ssh user@hostname'

# Wake/sleep display (for OLED)
alias dimscreen='brightnessctl set 30%'
alias brightscreen='brightnessctl set 100%'

# Audio controls
alias vol-up='pactl set-sink-volume @DEFAULT_SINK@ +5%'
alias vol-down='pactl set-sink-volume @DEFAULT_SINK@ -5%'
alias vol-mute='pactl set-sink-mute @DEFAULT_SINK@ toggle'

# Power management
alias powersave='powerprofilesctl set power-saver'
alias balanced='powerprofilesctl set balanced'
alias performance='powerprofilesctl set performance'

# Clipboard (X11)
alias clip='xclip -selection clipboard'
alias paste='xclip -selection clipboard -o'

# Screenshot (X11/i3)
alias screenshot='$HOME/.config/i3/scripts/screenshot.sh'

# Systemd user services
alias scu='systemctl --user'
alias scur='systemctl --user restart'
alias scus='systemctl --user status'

# Journal
alias jctl='journalctl -xe'
alias jctlu='journalctl --user -xe'

# Network
alias wifi='nmcli device wifi list'
alias wifi-connect='nmcli device wifi connect'
alias vpn-up='nmcli connection up'
alias vpn-down='nmcli connection down'
